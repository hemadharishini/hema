        // --- PAGE: CONTACT ---

        const Contact = () => {
            const [status, setStatus] = useState('idle');
            const handleSubmit = (e) => {
                e.preventDefault();
                setStatus('sending');
                setTimeout(() => { setStatus('success'); setTimeout(() => setStatus('idle'), 3000); }, 1500);
            };

            return (
                <section className="min-h-screen flex items-center justify-center px-[8%] pt-32 pb-20 animate-fadeInUp">
